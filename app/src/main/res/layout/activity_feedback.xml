<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1e1e1e"
    android:padding="5dp"
    tools:context=".Feedback">
<android.support.constraint.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/feb_bor">

    <EditText
        android:id="@+id/editTextx"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textMultiLine"
        android:textColor="@color/spinn"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.56" />

    <Button
        android:id="@+id/buttonx"
        android:layout_width="100dp"
        android:layout_height="49dp"
        android:layout_marginTop="96dp"
        android:background="@drawable/feedbutton"
        android:text="Send"
        android:textColor="@color/spinn"
        app:layout_constraintEnd_toEndOf="@+id/editTextx"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="@+id/editTextx"
        app:layout_constraintTop_toBottomOf="@+id/editTextx" />
</android.support.constraint.ConstraintLayout>
</ScrollView>